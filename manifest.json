{
        "name": "Gerrit line clipboard",
        "version": "0.1.0",
        "description": "Copies the currently selected line in Gerrit to the clipboard for easy paste in IDE!",
        "manifest_version": 2,
        "web_accessible_resources": [
                "images/tick.png"
        ],
        "background": {
                "scripts": [
                        "scripts/background.js"
                ]
        },
        "content_scripts": [
                {
                        "matches": [
                                "<all_urls>"
                        ],
                        "js": [
                                "scripts/clipper.js"
                        ]
                }
        ]
}